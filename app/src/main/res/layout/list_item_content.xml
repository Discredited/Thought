<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="- ONE STORY -"
        android:textColor="@color/small_color"
        android:textSize="@dimen/small_text" />

    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="当时的月亮"
        android:textColor="@color/content_color"
        android:textSize="@dimen/common_title" />

    <TextView
        android:id="@+id/item_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="文/荞麦"
        android:textColor="@color/content_color"
        android:textSize="@dimen/small_text" />

    <com.project.xujun.juneutils.customview.ScaleImageView
        android:id="@+id/item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:fix_mode="fix_width"
        app:height_scale="9"
        app:width_scale="16" />

    <TextView
        android:id="@+id/item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="她不想谈文字，又希望从他的华丽悟出点什么偶然的真理。她不想谈文字，又希望从他的华丽悟出点什么偶然的真理。"
        android:textColor="@color/content_color"
        android:textSize="@dimen/common_text" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_layout_size">

        <TextView
            android:id="@+id/item_time"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center"
            android:text="15小时前"
            android:textColor="@color/small_color"
            android:textSize="@dimen/small_text" />

        <ImageView
            android:id="@+id/item_share"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:padding="@dimen/icon_image_padding"
            android:src="@mipmap/share" />

        <TextView
            android:id="@+id/temp_text"
            android:layout_width="20dp"
            android:layout_height="48dp"
            android:layout_toLeftOf="@id/item_share"
            android:gravity="center"
            android:text="·"
            android:textColor="@color/small_color"
            android:textSize="@dimen/common_text_20" />

        <TextView
            android:id="@+id/laud_count"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_toLeftOf="@id/temp_text"
            android:text="674"
            android:textColor="@color/small_color"
            android:textSize="@dimen/small_text" />

        <ImageView
            android:id="@+id/laud_img"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_toLeftOf="@id/laud_count"
            android:padding="@dimen/icon_image_padding"
            android:scaleType="fitXY"
            android:src="@mipmap/laud" />
    </RelativeLayout>
</LinearLayout>