<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="#fff">

    <!-- 日期·地区 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/one_date"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:textColor="#666666"
            android:textSize="@dimen/common_title" />

        <TextView
            android:id="@+id/one_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:textColor="#999999"
            android:textSize="@dimen/small_text" />
    </LinearLayout>

    <!-- 信息 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.project.xujun.juneutils.customview.ScaleImageView
            android:id="@+id/one_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            app:fix_mode="fix_width"
            app:width_scale="690"
            app:height_scale="450"/>

        <TextView
            android:id="@+id/one_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textColor="#fff"
            android:textSize="@dimen/small_text" />

    </RelativeLayout>

    <TextView
        android:id="@+id/one_draw"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/common_layout_size"
        android:gravity="center"
        android:textColor="@color/small_color"
        android:textSize="@dimen/small_text" />

    <TextView
        android:id="@+id/one_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/content_color"
        android:textSize="@dimen/common_text" />

    <TextView
        android:id="@+id/one_author"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/common_layout_size"
        android:gravity="center"
        android:textColor="@color/small_color"
        android:textSize="@dimen/small_text" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_layout_size">
        <LinearLayout
            android:id="@+id/diary_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_white_press_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="fitXY"
                android:padding="@dimen/icon_image_padding"
                android:src="@mipmap/diary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:text="小记"
                android:textColor="@color/small_color"
                android:textSize="@dimen/small_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/share_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_white_press_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="fitXY"
                android:padding="@dimen/icon_image_padding"
                android:src="@mipmap/share" />
        </LinearLayout>

        <TextView
            android:id="@+id/temp_text"
            android:layout_width="20dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_toLeftOf="@id/share_layout"
            android:text="·"
            android:textColor="@color/small_color"
            android:textSize="@dimen/common_text_20" />

        <LinearLayout
            android:id="@+id/laud_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:layout_toLeftOf="@id/temp_text"
            android:background="@drawable/selector_white_press_gray"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/laud_img"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:scaleType="fitXY"
                android:padding="@dimen/icon_image_padding"
                android:src="@mipmap/laud" />

            <TextView
                android:id="@+id/laud_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/small_color"
                android:textSize="@dimen/small_text" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>