<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="#4FB7E2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <ImageView
            android:id="@+id/image1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="fitXY"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <ImageView
            android:id="@+id/image2"
            android:layout_width="240dp"
            android:layout_height="150dp"
            android:scaleType="fitXY"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"/>

        <com.project.xujun.juneutils.customview.ScaleImageView
            android:id="@+id/image3"
            android:layout_width="240dp"
            android:layout_height="500dp"
            android:scaleType="fitXY"
            app:fix_mode="1"
            app:width_scale="16"
            app:height_scale="9"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <com.project.xujun.juneutils.customview.JuneButton
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="20dp"
            android:textColor="#fff"
            android:textSize="16sp"
            android:text="自定义按钮"
            app:normal_color="#00aeae"
            app:press_color="#005757"
            app:disable_color="#424242"
            app:lt_radius="5dp"
            app:lb_radius="5dp"
            app:rt_radius="5dp"
            app:rb_radius="5dp" />

        <com.project.xujun.juneutils.media.VideoPlayView
            android:id="@+id/video_player"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"/>
    </LinearLayout>
</ScrollView>
