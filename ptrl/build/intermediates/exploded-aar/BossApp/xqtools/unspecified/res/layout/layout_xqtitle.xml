<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="true"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/xqtitle_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/xqtitle_back_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/image_button_selector"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/xqtitle_textview"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_toLeftOf="@+id/xqtitle_right_layout"
            android:layout_toRightOf="@id/xqtitle_back_button"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/xq_activity_title_color"
            android:textSize="@dimen/txt_base_18"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/xqtitle_right_layout"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:minWidth="48dp"></RelativeLayout>

    </RelativeLayout>

    <View
        android:id="@+id/title_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/xq_line_deep_color" />
</LinearLayout>
